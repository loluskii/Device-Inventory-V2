@model PageViewModel
@*Schedule/Create*@


<partial name="../Partials/_SchedulePartial.cshtml" model="Model" />


<div class="row">
    <div class="container-fluid  p-2">

        <div class=" col-lg-6 m-auto">
            <div class="tile">
                <h3 class="tile-title text-center">Register Visitor</h3>
                <form id="createScheduleForm" class="form-horizontal">

                    <div class="tile-body">
                        <div class="form-group row">
                            <label class="control-label col-md-3">Phone Number<span class="text-danger">*</span></label>
                            <div class="col-md-8">
                                <input class="form-control" id="txtPhoneNumber" type="text" placeholder="Enter Phone number">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Fullname</label>
                            <div class="col-md-8">
                                <input class="form-control" id="txtFullName" type="text" placeholder="Enter Fullname">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3">Email</label>
                            <div class="col-md-8">
                                <input class="form-control" id="txtEmail" type="email" placeholder="Enter email address">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3">Expected Date</label>
                            <div class="col-md-8">
                                <input class="form-control" id="txtExpectedDate" type="text" placeholder="Expected Date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Expected Time</label>
                            <div class="col-md-8">
                                <input class="form-control" id="txtExpectedTime" type="text" placeholder="Expected Time">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Gender</label>
                            <div class="col-md-9">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="gender" value="M">Male
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="gender" value="F">Female
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Reason</label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="taReason" type="text" placeholder="Enter reason for visit"></textarea>
                            </div>
                        </div>


                    </div>
                    <div class="tile-footer">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-3  ml-auto text-right">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Register</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" href="#"><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>

@section Scripts{

    <script src="~/js/scripts/schedule_create.js"></script>

}

