@model PageViewModel
@*User/Subsidiary*@

<partial name="../Partials/_UserPartial.cshtml" model="Model" />



<div class="row">
    <div class="container-fluid   p-2">

        <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active " id="create-tab" data-toggle="tab" href="#create" role="tab" aria-controls="create" aria-selected="true">List All </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="list-tab" data-toggle="tab" href="#list" role="tab" aria-controls="list" aria-selected="false">Create New</a>
            </li>



        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="create" role="tabpanel" aria-labelledby="home-tab">
                <div class="col-md-6 m-auto">
                    <div class="tile">
                        <h3 class="tile-title">Subsidiaries</h3>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>s/n</th>
                                    <th>Name</th>
                                    <th>Description</th>

                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="subsidiaryTBody"></tbody>
                        </table>
                        <script id="subsidiaryTemplate" type="html/template">
                            {{#subsidiaries}}
                            <tr data-id={{id}}>
                                <td>{{id}}</td>
                                <td class="name">{{name}}</td>
                                <td>{{description}}</td>

                                <td>
                                    {{#isActive}}Active{{/isActive}}
                                    {{^isActive}}Disabled{{/isActive}}
                                </td>
                                <td>
                                    <button class="btn btn-primary btn-sm edit" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i>Edit</button>
                                    <button class="btn btn-danger waves-effect btn-sm delete" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash"></i>Delete</button>

                                </td>
                            </tr>
                            {{/subsidiaries}}
                        </script>
                    </div>
                </div>
              
            </div>
            <div class="tab-pane fade" id="list" role="tabpanel" aria-labelledby="profile-tab">
                <div class=" col-lg-6 m-auto">
                    <div class="tile">
                        <h3 class="tile-title text-center">Create Subsidiary</h3>
                        <form id="subsidiaryForm" class="form-horizontal">
                            <div class="tile-body">

                                <div class="form-group row">
                                    <label class="control-label col-md-3">Subsidiary</label>
                                    <div class="col-md-8">
                                        <input class="form-control" id="txtSubsidiary" type="text" placeholder="Enter Subsidiary">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3">Description</label>
                                    <div class="col-md-8">
                                        <textarea class="form-control" id="taDescription" type="text" placeholder="Enter Description"></textarea>
                                    </div>
                                </div>



                            </div>
                            <div class="tile-footer">
                                <div class="row">
                                    <div class="col-md-8 col-md-offset-3 ml-auto text-right">
                                        <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Create</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" href="#"><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
@section Scripts{ 
<script src="~/js/scripts/subsidiary.js"></script>
}

